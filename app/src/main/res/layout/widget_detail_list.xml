<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future day (not today) -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/widget_padding_horizontal"
        android:paddingLeft="@dimen/widget_padding_horizontal"
        android:paddingRight="@dimen/widget_padding_horizontal"
        android:paddingStart="@dimen/widget_padding_horizontal">

        <ImageView
            android:id="@+id/widget_item_icon"
            android:layout_width="@dimen/widget_icon"
            android:layout_height="@dimen/widget_icon"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_padding_horizontal"
            android:layout_marginStart="@dimen/widget_padding_horizontal"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_main_text_size" />

            <TextView
                android:id="@+id/widget_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/widget_main_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_high_textview"
            android:layout_width="@dimen/widget_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/widget_sub_text_size" />

        <TextView
            android:id="@+id/widget_low_textview"
            android:layout_width="@dimen/widget_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/widget_temperature_space"
            android:layout_marginStart="@dimen/widget_temperature_space"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:textColor="@color/forecast_low_text"
            android:textSize="@dimen/widget_sub_text_size" />

    </LinearLayout>
</FrameLayout>