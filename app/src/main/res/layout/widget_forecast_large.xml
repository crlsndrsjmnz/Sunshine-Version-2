<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:id="@+id/widget_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/screen_background_light_transparent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/widget_padding_vertical"
        android:paddingLeft="@dimen/widget_padding_horizontal"
        android:paddingRight="@dimen/widget_padding_horizontal"
        android:paddingTop="@dimen/widget_padding_vertical">

        <ImageView
            android:id="@+id/widget_item_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxHeight="@dimen/widget_icon"
            android:maxWidth="@dimen/widget_icon" />

        <TextView
            android:id="@+id/widget_description_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/widget_low_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:textColor="@color/forecast_low_text"
            android:textSize="@dimen/forecast_text_size" />

        <TextView
            android:id="@+id/widget_high_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/forecast_temperature_space"
            android:layout_marginRight="@dimen/forecast_temperature_space"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/forecast_text_size" />
    </LinearLayout>
</FrameLayout>